<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="logic.LogIn">
   <children>
      <HBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #FFCD00;">
               <children>
                  <Label text="COLBANK">
                     <font>
                        <Font name="Arial Bold" size="40.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
               <children>
                  <VBox alignment="CENTER_LEFT" maxWidth="250.0" minWidth="200.0" prefHeight="200.0" prefWidth="220.0" spacing="5.0">
                     <children>
                        <Label alignment="TOP_LEFT" prefHeight="17.0" prefWidth="141.0" text="Document number:">
                           <font>
                              <Font name="Arial" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="usuariotf" maxWidth="250.0">
                           <font>
                              <Font name="Arial" size="12.0" />
                           </font>
                        </TextField>
                        <Label alignment="TOP_LEFT" text="Password:">
                           <font>
                              <Font name="Arial" size="12.0" />
                           </font>
                        </Label>
                        <PasswordField fx:id="passwordtextfield" maxWidth="250.0" />
                        <Hyperlink fx:id="registrateHL" onAction="#toregister" text="Sign up">
                           <font>
                              <Font name="Arial" size="12.0" />
                           </font>
                        </Hyperlink>
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" prefHeight="25.0" prefWidth="100.0" spacing="20.0">
                     <children>
                        <Button fx:id="backToStartButton" mnemonicParsing="false" onAction="#backToStart" text="Back" />
                        <Button fx:id="ingresaroBoton" mnemonicParsing="false" onAction="#Login" text="Log in">
                           <font>
                              <Font name="Arial" size="12.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
